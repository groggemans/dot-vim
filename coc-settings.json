{
    "suggest.noselect": true,
    "suggest.enablePreselect": false,
    "diagnostic.errorSign": "âœ˜",
    "diagnostic.warningSign": "!",
    "diagnostic.infoSign": "?",
    "diagnostic.checkCurrentLine": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "javascript",
        "html",
        "json",
        "css",
        "scss",
        "go"
    ],
    "languageserver": {
        "terraform": {
            "command": "terraform-ls",
            "args": [
                "serve"
            ],
            "filetypes": [
                "terraform",
                "tf"
            ],
            "initializationOptions": {}
        },
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod"
            ],
            "filetypes": [
                "go"
            ]
        }
    },
    "markdownlint.config": {
        "default": true,
        "line-length": {
            "tables": false,
            "code_blocks": false
        },
        "no-duplicate-header": {
            "allow_different_nesting": true
        }
    },
    "go.goplsOptions": {
        "staticcheck": true
    }
}
